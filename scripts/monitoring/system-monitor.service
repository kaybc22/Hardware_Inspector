[Unit]
Description=Monitor Web Service
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/python3 /usr/lib/systemd/system/monitor_web_v1.py
Restart=on-failure
User=root
#WorkingDirectory=/path/to

[Install]
WantedBy=multi-user.target



